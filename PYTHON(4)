from datetime import datetime

# Liste qui va stocker toutes les fiches utilisateurs
liste_utilisateurs = []

continuer = "oui"

while continuer == "oui":
    print("\n--- CrÃ©ation d'une fiche utilisateur ---")

    nom = input("Nom : ")
    prenom = input("PrÃ©nom : ")
    age = int(input("Ã‚ge : "))

    # Date et heure de crÃ©ation
    date_creation = datetime.now().strftime("%d/%m/%Y Ã  %Hh%M")

    # CrÃ©ation de la fiche utilisateur (dictionnaire)
    fiche_utilisateur = {
        "nom": nom,
        "prenom": prenom,
        "age": age,
        "date_creation": date_creation
    }

    # Ajout de la fiche Ã  la liste
    liste_utilisateurs.append(fiche_utilisateur)

    print("âœ… Fiche enregistrÃ©e avec succÃ¨s !")

    continuer = input("Souhaitez-vous ajouter un autre utilisateur ? (oui/non) ").lower()

# Affichage final
print("\nğŸ“‹ LISTE DES UTILISATEURS ENREGISTRÃ‰S :\n")

for utilisateur in liste_utilisateurs:
    print(
        f"- {utilisateur['prenom']} {utilisateur['nom']} | "
        f"{utilisateur['age']} ans | "
        f"CrÃ©Ã© le {utilisateur['date_creation']}"
    )
